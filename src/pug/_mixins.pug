
//- ===================================================================================
//-
  Creates a simple box with corner treatment for fields and visually separated areas
//- ===================================================================================
mixin box()
  span(class=`cp-2020__box${attributes.class ? ' ' + attributes.class : ''}`)
    span.cp-2020__box--inner
      block

//- ===================================================================================
//-
  Creates an Input textfield box and the surrounding markup for visual consistency
  @param  {[type]} attrName  Roll20 Attribute name (snake or camel cased -- no spaces)
  @param  {[type]} attrLabel Human readable Label copy
//- ===================================================================================
mixin attrField(attrName, attrLabel)
  +box(class=attributes.class)
    label(for=attrName)
      input(id=attrName name=`attr_${attrName}` type=attributes.type)
      if block
        block
      else
        span=attrLabel

//- ===================================================================================
//-
  Creates a Select box and the surrounding markup for visual consistency
  @param  {String} attrName    Roll20 Attribute name (snake or camel cased -- no spaces)
  @param  {Array} attrOptions Array of Objects with value, label and optional default keys
  @param  {[type]} attrLabel   Human readable Label copy
//- ===================================================================================
mixin attrSelect(attrName, attrOptions, attrLabel)
  +box
    label(for=attrName class=attributes.class)
      select(id=attrName name=`attr_${attrName}`)
        each attrOption in attrOptions
          option(value=attrOption.value default=attrOption.default)= attrOption.label
      if block
        block
      else
        span= attrLabel

//- ===================================================================================
  Creates an input and its surrounding markup for armor values
  @param  {String} location Human readable body part name for label that is turned into css selectors
//- ===================================================================================
mixin armorField(location)
  - var limb = location.replace(' ', '-').toLowerCase()
  +box(class=`armor-location--${limb}`)
    label(for=`armor_${limb}` class=`${attributes.class}`)
      input(id=`armor_${limb}` name=`attr_Armor_${location.replace('-', '_')}` type='number')
      span= location

