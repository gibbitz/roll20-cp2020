{
  "name": "cp2020",
  "version": "1.0.0",
  "description": "Character sheet build system for Roll 20",
  "main": "src/index.js",
  "watch": {
    "dev:html": {
      "patterns": [
        "./src/**"
      ],
      "extensions": "pug, js, json"
    },
    "build:data": "./src/data/*.{js,json}",
    "build:css": {
      "patterns": [
        "./src/**"
      ],
      "extensions": "scss"
    }
  },
  "scripts": {
    "test": "jest",
    "build:css": "node-sass src/cp2020.scss -o dist",
    "build:html": "pug src/cp2020.pug -o dist -O src/data/index.js",
    "dev:html": "pug src/cp2020.pug --pretty -o dist -O src/data/index.js",
    "build:data": "json-to-scss ./src/data/index.js ./src/scss/_partials/_data.scss --v=sq --p='$data: '",
    "build": "run-p build:data build:css build:html copy:mods",
    "copy:mods": "cpy --flat ./src/api-scripts/**.js ./dist/api-scripts",
    "watch": "npm-watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gibbitz/rolll20-cp2020.git"
  },
  "keywords": [
    "roll-20",
    "gibbitz",
    "cyberpunk"
  ],
  "author": "gibbitzStudios",
  "license": "Unlicense",
  "bugs": {
    "url": "https://github.com/gibbitz/rolll20-cp2020/issues"
  },
  "homepage": "https://github.com/gibbitz/rolll20-cp2020#readme",
  "devDependencies": {
    "@babel/cli": "^7.18.9",
    "@babel/core": "^7.18.9",
    "@babel/polyfill": "^7.10.4",
    "@babel/preset-env": "^7.18.9",
    "babel-eslint": "^10.1.0",
    "core-js": "^3.24.0",
    "cpy-cli": "^4.1.0",
    "eslint": "^8.20.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-plugin-babel": "^5.3.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsx-a11y": "^6.6.1",
    "eslint-plugin-react": "^7.30.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "json-to-scss": "^1.6.2",
    "node-sass": "^7.0.1",
    "normalize-scss": "^7.0.1",
    "npm-run-all": "^4.1.5",
    "npm-watch": "^0.11.0",
    "pug": "^3.0.2",
    "pug-cli": "^1.0.0-alpha6"
  }
}
