{
  "name": "cp2020",
  "version": "1.0.0",
  "description": "Character sheet build system for Roll 20",
  "main": "src/index.js",
  "watch": {
    "dev:html": {
      "patterns": [
        "./src/**"
      ],
      "extensions": "pug"
    },
    "build:data": "./src/data/*.{js,json}",
    "build:css": {
      "patterns": [
        "./src/**"
      ],
      "extensions": "scss"
    },
    "build:js": "./src/**.js"
  },
  "scripts": {
    "test": "jest",
    "build:js": "babel -f ./src/index.js --out-file dist/app.js",
    "build:css": "node-sass src/index.scss -o dist",
    "build:html": "pug src/index.pug -o dist -O src/data/index.js",
    "dev:html": "pug src/index.pug --pretty -o dist -O src/data/index.js",
    "build:data": "json-to-scss ./src/data/index.js ./src/scss/_partials/_data.scss --v=sq --p='$data: '",
    "build": "run-p build:data build:css build:js build:html",
    "watch": "npm-watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gibbitz/rolll20-cp2020.git"
  },
  "keywords": [
    "roll-20",
    "gibbitz",
    "cyberpunk"
  ],
  "author": "gibbitzStudios",
  "license": "Unlicense",
  "bugs": {
    "url": "https://github.com/gibbitz/rolll20-cp2020/issues"
  },
  "homepage": "https://github.com/gibbitz/rolll20-cp2020#readme",
  "devDependencies": {
    "@babel/cli": "^7.10.5",
    "@babel/core": "^7.10.5",
    "@babel/polyfill": "^7.10.4",
    "@babel/preset-env": "^7.10.4",
    "babel-eslint": "^10.1.0",
    "core-js": "^3.6.5",
    "eslint": "^7.5.0",
    "eslint-config-airbnb": "^18.2.0",
    "eslint-plugin-babel": "^5.3.1",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-react": "^7.20.3",
    "eslint-plugin-react-hooks": "^4.0.8",
    "json-to-scss": "^1.5.0",
    "node-sass": "^4.14.1",
    "normalize-scss": "^7.0.1",
    "npm-run-all": "^4.1.5",
    "npm-watch": "^0.6.0",
    "pug": "^3.0.0",
    "pug-cli": "^1.0.0-alpha6"
  }
}
